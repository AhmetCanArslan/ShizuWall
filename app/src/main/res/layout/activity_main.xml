<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- GitHub icon moved to the left of the app title -->
    <ImageView
        android:id="@+id/githubIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/github_button_desc"
        android:src="@drawable/ic_github"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/appTitle"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShizuWall"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/githubIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firewallLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_firewall"
        android:textSize="14dp"
        android:paddingEnd="8dp"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/firewallToggle"
        app:layout_constraintTop_toTopOf="@id/appTitle"
        app:layout_constraintBottom_toBottomOf="@id/appTitle" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/firewallToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/overflowMenu"
        app:layout_constraintTop_toTopOf="@id/appTitle"
        app:layout_constraintBottom_toBottomOf="@id/appTitle" />

    <!-- Overflow / three-dot menu (top-right) -->
    <ImageButton
        android:id="@+id/overflowMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/more_options"
        android:src="@android:drawable/ic_menu_more"
        app:tint="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/appTitle"
        app:layout_constraintBottom_toBottomOf="@id/appTitle" />

    <!-- SearchView and selected count placed on the same horizontal row:
         SearchView expands to available space and selectedCountText is anchored to the end -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:queryHint="Search app"
        android:iconifiedByDefault="false"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/selectedCountText"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/selectedCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_0"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@id/searchView"
        app:layout_constraintTop_toTopOf="@id/searchView"
        app:layout_constraintBottom_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category bar moved below search bar -->
    <HorizontalScrollView
        android:id="@+id/categoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:clipToPadding="false"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="4dp"
            android:checkedButton="@id/chip_default">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_default"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_default"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_system"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_system" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_selected"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_selected" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_unselected"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_unselected" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_user"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_user" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/categoryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_app" />

</androidx.constraintlayout.widget.ConstraintLayout>